{
  "compilerOptions": {
    "checkJs": true,
    "baseUrl": ".",
    "module":"NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "paths": {
      "#validators/*": ["./src/validators/*"],
      "#handlers/*": ["./src/handlers/*"],
      "#services/*": ["./src/services/*"],
      "#routes/*": ["./src/routes/*"],
      "#forms/*": ["./src/forms/*"],
      "#views/*": ["./src/views/*"],
      "#util/*": ["./src/util/*"],
      "#db/*/*": ["./src/db/*"]
    }
  }
}
